{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["src/tests/*.conform.tsx"]
  },
  "files": {
    "ignore": ["dist"]
  },
  "linter": {
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "noNamespaceImport": "off"
      },
      "correctness": {
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "suspicious": {
        "noConsole": "off",
        "noConsoleLog": "off",
        "noReactSpecificProps": "off"
      }
    },
    "ignore": ["src/tests/*.conform.tsx"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
